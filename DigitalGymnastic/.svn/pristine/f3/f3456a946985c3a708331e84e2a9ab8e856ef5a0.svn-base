<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_login"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <LinearLayout android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp">
  <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
             android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_deviceconfirm"/>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="3dp"
            android:textColor="@color/device_rel_text_normal"
            android:textSize="@dimen/x11" />
    </LinearLayout>
 <LinearLayout android:id="@+id/ll_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_title"
        android:orientation="vertical"
        android:layout_margin="10dp"
     android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/device_confirm"
            android:textColor="@color/device_rel_text_desp"
            android:textSize="15dp" />
    </LinearLayout>
  <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_desc"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_margin="30dp" >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:gravity="center"
             android:layout_gravity="center_vertical"
            android:src="@mipmap/success_pipei"/>
        
    </LinearLayout>
     <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="25dp" >

       <Button android:id="@+id/btn_changedevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changedevice"
        android:textColor="@color/device_unbind_btncolor"
        android:textSize="@dimen/x11"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:gravity="center"
        />
       
        <Button android:id="@+id/btn_alermnotlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alermnotlight"
        android:textColor="@color/device_unbind_btncolor"
        android:textSize="@dimen/x11"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:gravity="center"
        />
        
    </RelativeLayout>
 
  
</RelativeLayout><!-- From: file:/Users/huwei/Documents/workspace/DigitalGymnastic/app/src/main/res/layout/activity_deviceconfirm.xml -->