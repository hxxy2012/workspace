<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_gender_man"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/y10">

        <RadioButton
            android:id="@+id/tv_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:button="@null"
            android:gravity="center"
            android:text="男"
            android:textColor="@drawable/gendertext_selector"
            android:textSize="@dimen/x18" />

        <ImageView
            android:id="@+id/iv_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x9"
            android:layout_toRightOf="@id/tv_man"
            android:src="@mipmap/btn_check" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/plan_line_color" />

    <RelativeLayout
        android:id="@+id/rl_gender_girl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/y10">

        <RadioButton
            android:id="@+id/tv_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:button="@null"
            android:gravity="center"
            android:text="女"
            android:textColor="@drawable/gendertext_selector"
            android:textSize="@dimen/x18" />

        <ImageView
            android:id="@+id/iv_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x9"
            android:layout_toRightOf="@id/tv_girl"
            android:src="@mipmap/btn_check"
            android:textColor="@color/picker_tophint2"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>