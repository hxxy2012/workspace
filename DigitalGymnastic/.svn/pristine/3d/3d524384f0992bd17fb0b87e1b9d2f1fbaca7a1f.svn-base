<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_login"
    android:orientation="vertical">
    <include
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        layout="@layout/topbar" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/grey_dd"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x20"
        android:background="@color/grey_e5"
        />
    <RelativeLayout
        android:id="@+id/rl_validcode_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_input_validcode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x44"
            android:layout_below="@id/iv_applogo1"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请输入图中的验证码"
            android:paddingLeft="@dimen/x9"
            android:textColor="@color/umeng_socialize_list_item_textcolor" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/grey_e5"
            />
        <ImageView
            android:id="@+id/iv_validcode_image"
            android:layout_width="@dimen/x133"
            android:layout_height="@dimen/x44"
            android:layout_below="@id/et_input_validcode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y23"
            android:scaleType="fitXY"
            android:src="@mipmap/zhanweitu" />
<!--
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_validcode_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y23"
            android:gravity="center_horizontal"
            android:text="点击图片换一张"
            android:textColor="@color/white" />
 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_validcode_image"
            android:layout_marginTop="@dimen/y5"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
            <!--
                        <Button
                            android:id="@+id/btn_cancel"
                            android:layout_width="@dimen/x44"
                            android:layout_height="@dimen/x44"
                            android:layout_marginRight="@dimen/x18"
                            android:background="@drawable/btn_unbind_selector"
                            android:text="取消"
                            android:textColor="@color/white" />
 -->

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x18"
                android:layout_marginRight="@dimen/x18"
                android:layout_marginTop="@dimen/y22"
                android:padding="@dimen/x9"
                android:background="@color/darkgray"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/x18" />
                    </LinearLayout>
                </RelativeLayout>

