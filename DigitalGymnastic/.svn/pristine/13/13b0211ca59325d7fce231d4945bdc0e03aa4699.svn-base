<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/app_bg"
    android:orientation="vertical" >

    <include layout="@layout/topbar" 
          />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:orientation="vertical"
        android:padding="@dimen/x9" >

        <ImageView
            android:id="@+id/iv_sport"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x178"
            android:src="@mipmap/app_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
          android:background="@color/white"
        android:padding="@dimen/x9" >

        <TextView
            android:id="@+id/tv_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/x13"
            android:text="TextView"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/x13"
            android:text="TextView"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/x13"
            android:text="TextView"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/x13"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/x9"
        android:layout_marginRight="@dimen/x9"
        android:background="@color/app_bg" />

    <TextView
        android:id="@+id/tv_jieshi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingLeft="@dimen/x9"
        android:paddingTop="@dimen/x9"
        android:text="TextView" 
        android:textSize="@dimen/x13"
          android:background="@color/white"/>

    <TextView
        android:id="@+id/tv_fh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/aliceblue"
        android:paddingLeft="@dimen/x9"
        android:paddingTop="@dimen/x9"
        android:textSize="@dimen/x13"
        android:text="TextView" />

</LinearLayout><!-- From: file:/Users/liqing/Documents/work/techfit/311/DigitalGymnastic2.1.3/trunk/DigitalGymnastic/DigitalGymnastic/app/src/main/res/layout/activity_onesportshow.xml -->