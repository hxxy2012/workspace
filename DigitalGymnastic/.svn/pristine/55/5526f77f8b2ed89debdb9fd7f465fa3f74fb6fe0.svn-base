<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    
    <com.hike.digitalgymnastic.view.SportRateImageView 
        android:id="@+id/sriv_sport"
        android:layout_width="@dimen/x222"
        android:layout_height="@dimen/x222"
        android:layout_gravity="center_horizontal"/>
    
     <FrameLayout
            android:id="@+id/fl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/y30"
            
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.1"
                android:background="#000000"
                android:gravity="center_horizontal"
                android:minHeight="@dimen/y90"
                android:visibility="gone"
                android:orientation="vertical" >

                <TextView
                    style="@style/mainpage_tv_value_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y8"
                    android:text="每一次的努力都有人与你共同见证"
                    android:visibility="invisible" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_selector"
                    android:text="分享"
                    android:textColor="@color/white"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x14"
                 android:layout_marginRight="@dimen/x14"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:minHeight="@dimen/y90"
                android:orientation="vertical" >

                <TextView
                    style="@style/mainpage_tv_value_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y8"
                    android:text="每一次的努力都有人与你共同见证"
                    android:alpha="0.6"
                     />

                <Button
                    android:id="@+id/btn_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_selector"
                    android:text="分享"
                    android:textColor="@color/white" />
            </LinearLayout>
        </FrameLayout>
</LinearLayout><!-- From: file:/D:/techfit3_1/app/src/main/res/layout/homepage_share.xml -->