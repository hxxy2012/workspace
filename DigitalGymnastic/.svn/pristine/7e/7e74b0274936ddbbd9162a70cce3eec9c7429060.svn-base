<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y37"
        android:layout_marginLeft="@dimen/x9"
        android:layout_marginRight="@dimen/x9" >

        <LinearLayout
            android:id="@+id/ll_btn_left"
            android:layout_width="@dimen/x53"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="left|center_vertical" >

            <ImageView
                android:id="@+id/btn_left"
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/x18"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/toolbar_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/y2"
            android:textColor="@color/white"
            android:textSize="@dimen/x16" />

        <LinearLayout
            android:id="@+id/ll_btn_right"
            android:layout_width="@dimen/x53"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right|center_vertical" >

            <TextView
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/x16"
                android:visibility="visible" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_right_text"
            style="@style/topbar_btn_right_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/huwei/Documents/workspace/DigitalGymnastic/app/src/main/res/layout/tixing_topbar.xml -->