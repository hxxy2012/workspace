<?xml version="1.0" encoding="utf-8"?>
<com.hike.digitalgymnastic.view.ScrollViewInner xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:orientation="vertical" 
    android:overScrollMode="never"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/activity_main_frament_sleep_urual" />

        <LinearLayout
            android:id="@+id/ll_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.hike.digitalgymnastic.view.HomeSleepStateView
                android:id="@+id/view_sleepState"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y185" />
        </LinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="@dimen/y40"
            android:layout_weight="1"/>
        <FrameLayout
            android:id="@+id/fl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/y10"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.1"
                android:background="#000000"
                android:gravity="center_horizontal"
                android:minHeight="@dimen/y90"
                android:orientation="vertical" >

                <TextView
                    style="@style/mainpage_tv_value_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y8"
                    android:text="让自己的睡眠情况被更多人所了解吧"
                    android:visibility="invisible" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_selector"
                    android:text="分享"
                    android:textColor="@color/white"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x14"
                 android:layout_marginRight="@dimen/x14"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:minHeight="@dimen/y90"
                android:orientation="vertical" >

                <TextView
                    style="@style/mainpage_tv_value_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y8"
                    android:text="让自己的睡眠情况被更多人所了解吧" />

                <Button
                    android:id="@+id/btn_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_selector"
                    android:text="分享"
                    android:textColor="@color/white" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</com.hike.digitalgymnastic.view.ScrollViewInner><!-- From: file:/D:/techfit3_1/app/src/main/res/layout/activity_main_frament_sleep_bottom.xml -->