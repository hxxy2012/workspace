<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/topbar_rightword" />

    <RelativeLayout
        android:id="@+id/id_phone_alert_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y53"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_phone_alert"
            android:id="@+id/id_phone_alert"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:textSize="20sp"
            android:textColor="@color/umeng_socialize_list_item_textcolor"
            android:layout_marginTop="17dp" />

        <TextView
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_phone_alert_hint"
            android:id="@+id/id_phone_alert_hint"
            android:layout_alignParentBottom="true"
            android:textColor="@color/umeng_socialize_text_time"
            android:layout_alignStart="@+id/id_phone_alert"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:layout_marginEnd="17dp"
            android:layout_alignBaseline="@+id/id_phone_alert"
            android:layout_alignBottom="@+id/id_phone_alert"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/x18"
        android:background="@color/grey_e5" />
    <RelativeLayout
        android:id="@+id/id_app_alert_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y53"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_app_alert"
            android:id="@+id/id_app_alert"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:textSize="20sp"
            android:textColor="@color/umeng_socialize_list_item_textcolor"
            android:layout_marginTop="17dp" />

        <TextView
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_app_alert_hint"
            android:id="@+id/id_app_alert_hint"
            android:layout_alignParentBottom="true"
            android:textColor="@color/umeng_socialize_text_time"
            android:layout_alignStart="@+id/id_app_alert"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_app_alert_checkBox"
            android:layout_marginEnd="17dp"
            android:layout_alignBaseline="@+id/id_app_alert"
            android:layout_alignBottom="@+id/id_app_alert"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>