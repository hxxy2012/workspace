<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/app_bg_login">

<RelativeLayout  android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:gravity="center_horizontal"
    android:orientation="vertical" >

 
	<!-- 分享类别布局 -->
    <LinearLayout  android:id="@+id/ll_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
         android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >

        <!-- 第一行 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView android:id="@+id/btn_share_weixin_friend"
                    android:layout_width="60dp"
                    android:layout_height="86dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:src="@drawable/icon_share_weixin_friend_selector" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView android:id="@+id/btn_share_weixin_space"
                    android:layout_width="60dp"
                    android:layout_height="86dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:src="@drawable/icon_share_weixin_space_selector" />
            </LinearLayout>

            <LinearLayout  
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView  android:id="@+id/btn_share_wlweibo"
                    android:layout_width="60dp"
                    android:layout_height="86dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:src="@drawable/icon_share_wlweibo_selector" />
            </LinearLayout>
        </LinearLayout>
        <!-- 第二行 -->

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView  android:id="@+id/btn_share_qq_friend"
                    android:layout_width="60dp"
                    android:layout_height="86dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:src="@drawable/icon_share_qq_friend_selector" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView  android:id="@+id/btn_share_qq_space"
                    android:layout_width="60dp"
                    android:layout_height="86dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:src="@drawable/icon_share_qq_space_selector" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView  android:id="@+id/btn_share_local"
                    android:layout_width="60dp"
                    android:layout_height="86dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:src="@drawable/icon_share_local_selector" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_above="@id/ll_share"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/doing_share"
            android:textColor="#333333"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>

</FrameLayout><!-- From: file:/Users/huwei/Documents/workspace/DigitalGymnastic/app/src/main/res/layout/activity_socialshare.xml -->