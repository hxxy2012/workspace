<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingLeft="@dimen/x5" 
    android:paddingRight="@dimen/x5"
    android:paddingTop="@dimen/y10"
    android:paddingBottom="@dimen/y10">
<LinearLayout  android:id="@+id/ll_top_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/x14"
        android:layout_marginTop="@dimen/y11"
        android:gravity="center_vertical|left"
        android:orientation="vertical" >
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="@dimen/x20" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/y15"
        android:textColor="@color/white"
        android:textSize="@dimen/x13" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/x14"
        android:layout_marginTop="@dimen/y11"
        android:gravity="center"
        android:orientation="vertical" >

        <com.hike.digitalgymnastic.view.UISwitchButton
            android:id="@+id/ck_open_or_close"
            android:layout_width="@dimen/x7"
            android:layout_height="@dimen/x11"
            android:layout_weight="1"
            android:checked="true"
            android:gravity="center_vertical" />

        <CheckBox
            android:id="@+id/cb_expand"
            android:layout_width="@dimen/x19"
            android:layout_height="@dimen/x10"
            android:layout_marginTop="@dimen/y15"
            android:layout_weight="1"
            android:background="@drawable/group_selector"
            android:button="@null"
            android:checked="false"
            android:focusable="false"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_clock_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <com.hike.digitalgymnastic.view.PickerView
                android:id="@+id/pv_hh"
                android:layout_width="@dimen/x71"
                android:layout_height="@dimen/y90"
                android:layout_margin="@dimen/x18" />

            <com.hike.digitalgymnastic.view.PickerView
                android:id="@+id/pv_mm"
                android:layout_width="@dimen/x71"
                android:layout_height="@dimen/y90"
                android:layout_margin="@dimen/x18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal" >

           

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rb_one"
                    style="@style/menu_clock_rbtn_style"
                    android:background="@drawable/menu_mon_rbtn_select"
                    android:button="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rb_two"
                    style="@style/menu_clock_rbtn_style"
                    android:background="@drawable/menu_tus_rbtn_select"
                    android:button="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rb_three"
                    style="@style/menu_clock_rbtn_style"
                    android:background="@drawable/menu_wes_rbtn_select"
                    android:button="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rb_four"
                    style="@style/menu_clock_rbtn_style"
                    android:background="@drawable/menu_thri_rbtn_select"
                    android:button="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rb_five"
                    style="@style/menu_clock_rbtn_style"
                    android:background="@drawable/menu_fri_rbtn_select"
                    android:button="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rb_six"
                    style="@style/menu_clock_rbtn_style"
                    android:background="@drawable/menu_sta_rbtn_select"
                    android:button="@null" />
            </LinearLayout>
             <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rb_seven"
                    style="@style/menu_clock_rbtn_style"
                    android:background="@drawable/menu_sun_rbtn_select"
                    android:button="@null" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

