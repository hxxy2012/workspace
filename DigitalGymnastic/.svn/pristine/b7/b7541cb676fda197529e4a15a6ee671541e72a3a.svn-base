<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/topbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y50"
        android:layout_marginLeft="@dimen/x20"
         android:layout_marginRight="@dimen/x20"
         android:layout_marginBottom="@dimen/x20"
        android:gravity="left"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:gravity="center"
            android:src="@mipmap/icon_deep_sleep" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:gravity="left"
            android:text="@string/deep_sleep"
            android:textColor="@color/white"
            android:textSize="@dimen/x18" />
    </LinearLayout>
    
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/x20"
         android:layout_marginRight="@dimen/x20"
         android:layout_marginBottom="@dimen/x20"
        android:gravity="left"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:gravity="center"
            android:src="@mipmap/icon_light_sleep" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:gravity="left"
            android:text="@string/light_sleep"
            android:textColor="@color/white"
            android:textSize="@dimen/x18" />
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/techfit3_1/app/src/main/res/layout/activity_sleep_define.xml -->