<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_login"
    android:orientation="vertical" >

    <include layout="@layout/topbar" />

     <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_dd" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="@color/app_bg_login" />
    <com.roamer.slidelistview.SlideListView
        xmlns:slide="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lv_message"
        android:listSelector="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        slide:slideAnimationTime="200"
        slide:slideLeftAction="scroll"
        android:scrollbars="@null"
        android:background="@color/transparent"
        android:cacheColorHint="@color/transparent"
        android:footerDividersEnabled="false"
        slide:slideMode="both"
        slide:slideRightAction="scroll" />
    
    <ImageView  android:id="@+id/iv_hasnomessage"
        android:layout_width="@dimen/x116"
        android:layout_height="@dimen/x116"
        android:layout_marginTop="@dimen/y75"
        android:layout_gravity="center"
        android:src="@mipmap/bg_hasnomessage"
        />
    

</LinearLayout><!-- From: file:/Users/huwei/Documents/workspace/DigitalGymnastic/app/src/main/res/layout/activity_menu_message.xml -->