<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

     <RelativeLayout
        android:layout_width="@dimen/x107"
        android:layout_height="@dimen/x27"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/x4"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/x14"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_sleep_home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x23"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x2"
            android:text="昨晚共睡眠"
            android:textColor="@color/white"
            android:textSize="@dimen/x16" />
    </RelativeLayout>
    
      <LinearLayout
        android:layout_width="@dimen/x160"
        android:layout_height="@dimen/x27"
        android:orientation="horizontal" 
        android:gravity="center_horizontal"
        >


        <TextView  android:id="@+id/tv_sleep_total_time"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x23"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="00小时00分钟"
            android:textSize="@dimen/x16"
            android:singleLine="true"
            android:textColor="@color/white" />
 </LinearLayout>
  
</LinearLayout>