<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/app_bg_login">
    <include
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/topbar" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/grey_dd"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x20"
        android:background="@color/grey_e5"
        />
    <EditText
        android:id="@+id/et_newpwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x44"
         android:paddingLeft="@dimen/x10"
         android:maxLength="18"
        android:textColor="@color/umeng_socialize_list_item_textcolor"
         android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:background="@color/white"
        android:hint="@string/newpwd_insert" 
         android:password="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/umeng_socialize_ucenter_bg"
        />
    <EditText
        android:id="@+id/et_newpwd_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x44"
         android:paddingLeft="@dimen/x10"
          android:maxLength="18"
         android:textColor="@color/umeng_socialize_list_item_textcolor"
          android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:background="@color/white"
        android:hint="@string/newpwd_insert_confirm"
         android:password="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/grey_e5"
        />
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x18"
        android:layout_marginRight="@dimen/x18"
        android:layout_marginTop="@dimen/y23"
        android:background="@drawable/btn_selector"
        android:padding="@dimen/x9"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/x18" />

</LinearLayout>